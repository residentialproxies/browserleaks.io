{
  "name": "@browserleaks/web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --webpack",
    "build:cloudflare": "npx @opennextjs/cloudflare build && node patch-worker.js",
    "build:analyze": "ANALYZE=true next build --webpack",
    "start": "next start",
    "preview": "npx wrangler pages dev .open-next/assets --compatibility-date=2024-09-23 --compatibility-flags=nodejs_compat",
    "deploy": "npx wrangler pages deploy .open-next/assets --project-name=browserleaks-io",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings=0",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next .turbo node_modules",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.3",
    "chart.js": "^4.4.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.453.0",
    "next": "^16.0.7",
    "next-intl": "^3.22.0",
    "react": "^19.2.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^19.2.1",
    "tailwind-merge": "^2.5.0",
    "web-vitals": "^3.5.0",
    "zod": "^3.23.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.0.7",
    "@opennextjs/cloudflare": "1.14.0",
    "@playwright/test": "^1.49.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20.10.0",
    "@types/react": "^19.0.5",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.12.0",
    "eslint-config-next": "^16.0.7",
    "jsdom": "^23.0.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.7.0",
    "vercel": "47.0.4",
    "vitest": "^1.0.0"
  }
}
