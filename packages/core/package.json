{
  "name": "@browserleaks/core",
  "version": "1.0.0",
  "private": true,
  "description": "Browser fingerprinting and privacy detection core library",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./collectors": {
      "types": "./dist/collectors/index.d.ts",
      "import": "./dist/collectors/index.mjs",
      "require": "./dist/collectors/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/collectors/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/collectors/index.ts --format cjs,esm --dts --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
