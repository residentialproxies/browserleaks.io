{
  "name": "browserleaks",
  "version": "1.0.0",
  "private": true,
  "description": "Next-generation browser privacy detection platform",
  "repository": {
    "type": "git",
    "url": "https://github.com/residentialproxies/browserleaks.io.git"
  },
  "license": "MIT",
  "author": "BrowserLeaks Team",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@browserleaks/web",
    "dev:api": "turbo run dev --filter=@browserleaks/api",
    "build": "turbo run build",
    "build:cf-pages": "npm run build:cloudflare --workspace=@browserleaks/web",
    "build:web": "turbo run build --filter=@browserleaks/web",
    "build:api": "turbo run build --filter=@browserleaks/api",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^9.12.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "npm@10.2.0",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "tailwindcss-animate": "1.0.7"
  }
}
